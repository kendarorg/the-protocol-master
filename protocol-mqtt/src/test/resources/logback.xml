<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%level] CID:%X{connection} %msg [%logger{0}] %n</pattern>
        </encoder>
    </appender>

    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>
    <logger name="org.kendar" level="DEBUG"/>
    <logger name="com.github" level="ERROR"/>
    <logger name="org.testcontainers" level="ERROR"/>
    <logger name="org.kendar.server.TcpServer" level="DEBUG"/>
    <logger name="org.kendar.proxy.NetworkProxySocket" level="DEBUG"/>
    <logger name="org.kendar.mqtt.fsm.MqttPacketTranslator" level="TRACE"/>

    <root level="ERROR">
        <appender-ref ref="stdout"/>
    </root>
</configuration>